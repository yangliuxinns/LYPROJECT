<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.turings.investigationapplicqation">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppNoTheme">
        <activity android:name=".PreViewActivity"></activity>
        <activity android:name=".AppearanceSettingsActivity" />
        <activity android:name=".QuestionnaireSettingsActivity" />
        <activity android:name=".EditQuestionSettingItemActivity" />
        <activity android:name=".EditTopicSettings" />
        <activity android:name=".EditTitleAndDescription" />
        <activity
            android:name=".EditQuestionnaire"
            android:theme="@style/AppNoTheme" />
        <activity android:name=".CreateBlankQuestionnaire" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginAndRegisterActivity" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
    </application>

</manifest>